<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.pyteam.vividic.viewmodel.MovieDetailsViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MovieDetailsFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:titleEnabled="false"
                app:contentScrim="@color/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_collapseMode="parallax"
                    app:backdropPath="@{model.backdropPath}"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="?android:attr/actionBarSize"
                    app:layout_collapseMode="parallax">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/movie_poster"
                        android:layout_width="@dimen/detail_poster_width"
                        android:layout_height="@dimen/detail_poster_height"
                        android:layout_marginStart="@dimen/detail_poster_margin_width"
                        android:layout_marginBottom="@dimen/detail_poster_margin_height"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:posterPath="@{model.posterPath}" />

                    <include
                        android:id="@+id/movie_release"
                        android:layout_width="@dimen/detail_content_width"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/detail_content_margin_width"
                        layout="@layout/detail_content"
                        app:title="@{@string/release_date}"
                        app:content="@{model.releaseDate}"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/movie_director"
                        app:layout_constraintStart_toEndOf="@id/movie_poster"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <include
                        android:id="@+id/movie_director"
                        android:layout_width="@dimen/detail_content_width"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/detail_content_margin_width"
                        layout="@layout/detail_content"
                        app:title="@{@string/director}"
                        app:content="@{model.director}"
                        app:layout_constraintTop_toBottomOf="@id/movie_release"
                        app:layout_constraintBottom_toTopOf="@id/movie_genre"
                        app:layout_constraintStart_toEndOf="@id/movie_poster"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <include
                        android:id="@+id/movie_genre"
                        android:layout_width="@dimen/detail_content_width"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/detail_content_margin_width"
                        layout="@layout/detail_content"
                        app:title="@{@string/genre}"
                        app:content="@{model.genres}"
                        app:layout_constraintTop_toBottomOf="@id/movie_director"
                        app:layout_constraintBottom_toTopOf="@id/movie_runtime"
                        app:layout_constraintStart_toEndOf="@id/movie_poster"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <include
                        android:id="@+id/movie_runtime"
                        android:layout_width="@dimen/detail_content_width"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/detail_content_margin_width"
                        layout="@layout/detail_content"
                        app:title="@{@string/runtime}"
                        app:content="@{model.runtime}"
                        app:layout_constraintTop_toBottomOf="@id/movie_genre"
                        app:layout_constraintBottom_toTopOf="@id/movie_rating"
                        app:layout_constraintStart_toEndOf="@id/movie_poster"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <include
                        android:id="@+id/movie_rating"
                        android:layout_width="@dimen/detail_content_width"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/detail_content_margin_width"
                        android:layout_marginBottom="20dp"
                        layout="@layout/detail_content"
                        app:title="@{@string/rating}"
                        app:content="@{model.rating}"
                        app:layout_constraintTop_toBottomOf="@id/movie_runtime"
                        app:layout_constraintStart_toEndOf="@id/movie_poster"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:title="@{model.title}"/>

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/movie_tagline"
                    android:layout_width="@dimen/detail_content_width"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginHorizontal="@dimen/detail_content_margin_width"
                    android:layout_marginTop="@dimen/detail_content_margin_height"
                    android:text="@{model.tagline}"
                    android:textSize="@dimen/list_header_title_text_size"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="italic"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/movie_overview_title"/>

                <TextView
                    android:id="@+id/movie_overview_title"
                    android:layout_width="@dimen/detail_content_width"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/detail_content_margin_width"
                    android:layout_marginTop="@dimen/detail_content_margin_height"
                    android:text="@string/overview"
                    android:textSize="@dimen/list_header_title_text_size"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/movie_tagline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/movie_overview_content"/>

                <TextView
                    android:id="@+id/movie_overview_content"
                    android:layout_width="@dimen/detail_content_width"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/detail_content_margin_width"
                    android:layout_marginBottom="@dimen/detail_content_margin_height"
                    android:text="@{model.overview}"
                    app:layout_constraintTop_toBottomOf="@id/movie_overview_title"
                    app:layout_constraintBottom_toTopOf="@id/movie_reviews"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <include
                    android:id="@+id/movie_reviews"
                    android:layout_width="@dimen/detail_content_width"
                    android:layout_height="wrap_content"
                    layout="@layout/list_content"
                    app:title="@{@string/reviews}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/movie_overview_content"
                    app:layout_constraintBottom_toTopOf="@id/movie_cast"/>

                <include
                    android:id="@+id/movie_cast"
                    android:layout_width="@dimen/detail_content_width"
                    android:layout_height="wrap_content"
                    layout="@layout/list_content"
                    app:title="@{@string/credit_cast}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/movie_reviews"
                    app:layout_constraintBottom_toTopOf="@id/movie_similar"/>

                <include
                    android:id="@+id/movie_similar"
                    android:layout_width="@dimen/detail_content_width"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/footer_margin_height"
                    layout="@layout/list_content"
                    app:title="@{@string/similar_movie}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/movie_cast"
                    app:layout_constraintBottom_toBottomOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>